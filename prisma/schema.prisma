// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



// Models

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String // Hashed
  role      String     @default("PROFESSIONAL")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  commissionRate Decimal @default(0) // Taxa de comissão (%)
  
  appointments Appointment[]
  budgets      Budget[]
  sales        Budget[] @relation("SalesSeller")
  cashRegisters CashRegister[]
}

model Client {
  id              String   @id @default(uuid())
  name            String
  email           String?  @unique
  phone           String?
  birthDate       DateTime? // Data de Nascimento
  cpf             String?  @unique
  rg              String?
  
  // Address Detailed
  cep             String?
  address         String?  // Street name
  number          String?
  complement      String?
  neighborhood    String?
  city            String?
  state           String?
  referencePoint  String?
  
  notes           String?
  referralSource  String? @default("NAO_INFORMADO") // AMIGOS, INSTAGRAM, GOOGLE, WHATSAPP, NAO_INFORMADO, FOLDER, PASSANTE
  status          String  @default("ATIVO") // ATIVO, INATIVO
  
  clientCredit    Decimal @default(0)
  creditNotes     String?
  
  blocked         Boolean  @default(false)
  asaasId         String? // ID do cliente no Asaas
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  appointments Appointment[]
  records      Record[]
  contracts    Contract[]
  transactions Transaction[]
  packages     Package[]
  budgets      Budget[]
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  price       Decimal
  duration    Int // in minutes
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  appointments Appointment[]
  packages     Package[]
  budgetItems  BudgetItem[]
}

model Appointment {
  id        String            @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  status    String @default("SCHEDULED")
  notes     String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  clientId  String
  client    Client   @relation(fields: [clientId], references: [id])
  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id])
  
  packageId String?
  package   Package? @relation(fields: [packageId], references: [id])
  
  transactions Transaction[]
}

model Record {
  id        String   @id @default(uuid())
  content   String // Evolution text
  photos    String? // JSON string of photo URLs for now
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clientId String
  client   Client @relation(fields: [clientId], references: [id])
}

model Contract {
  id        String   @id @default(uuid())
  title     String
  pdfUrl    String
  signed    Boolean  @default(false)
  signedAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clientId String
  client   Client @relation(fields: [clientId], references: [id])
}

model Transaction {
  id            String          @id @default(uuid())
  description   String
  amount        Decimal
  type          String
  status        String   @default("PENDING")
  dueDate       DateTime?
  paidAt        DateTime?
  asaasId       String? // External ID from Asaas
  invoiceUrl    String?
  notes         String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  clientId      String?
  client        Client?         @relation(fields: [clientId], references: [id])
  appointmentId String?
  appointment   Appointment?    @relation(fields: [appointmentId], references: [id])
  packageId     String?
  package       Package?        @relation(fields: [packageId], references: [id])

  categoryId      String?
  category        FinancialCategory? @relation(fields: [categoryId], references: [id])
  accountId       String?
  account         Account?           @relation(fields: [accountId], references: [id])
  paymentMethodId String?
  paymentMethod   PaymentMethod?     @relation(fields: [paymentMethodId], references: [id])
  cashRegisterId  String?
  cashRegister    CashRegister?      @relation(fields: [cashRegisterId], references: [id])
}

model FinancialCategory {
  id             String        @id @default(uuid())
  name           String
  type           String        // INCOME, EXPENSE
  isRecurring    Boolean       @default(false)
  defaultAmount  Decimal?
  dueDay         Int?          // Day of month for recurring expenses
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  transactions   Transaction[]
}

model Account {
  id           String        @id @default(uuid())
  name         String
  balance      Decimal       @default(0)
  type         String        @default("CASH") // BANK, CASH, etc.
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  transactions Transaction[]
}

model PaymentMethod {
  id           String        @id @default(uuid())
  name         String
  type         String        // PIX, CREDIT_CARD, BOLETO, DINHEIRO, etc.
  receiptDays  Int           @default(0) // Days to receive the amount
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  transactions Transaction[]
}

model CashRegister {
  id              String        @id @default(uuid())
  status          String        @default("OPEN") // OPEN, CLOSED
  openingDate     DateTime      @default(now())
  closingDate     DateTime?
  openingBalance  Decimal
  closingBalance  Decimal?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  userId          String
  user            User          @relation(fields: [userId], references: [id])
  
  transactions    Transaction[]
}

model Package {
  id                String   @id @default(uuid())
  totalSessions    Int
  remainingSessions Int
  price             Decimal
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  status            String   @default("ACTIVE") // ACTIVE, COMPLETED, CANCELLED

  clientId          String
  client            Client   @relation(fields: [clientId], references: [id])
  serviceId         String
  service           Service  @relation(fields: [serviceId], references: [id])
  
  appointments      Appointment[]
  transactions      Transaction[]
}

model Budget {
  id              String       @id @default(uuid())
  name            String       // Ex: Black Friday
  date            DateTime     @default(now())
  validUntil      DateTime?    // Validade
  status          String       @default("PENDENTE") // PENDENTE, APROVADO, REPROVADO, CANCELADO
  totalAmount     Decimal      @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  clientId        String
  client          Client       @relation(fields: [clientId], references: [id])
  userId          String       // Profissional que realizou a venda
  user            User         @relation(fields: [userId], references: [id])
  
  sellerId        String?      // Vendedor responsável
  seller          User?        @relation("SalesSeller", fields: [sellerId], references: [id])
  discount        Decimal      @default(0)
  discountType    String?      // PERCENTAGE, FIXED, COUPON
  couponCode      String?
  commission      Decimal      @default(0) // Comissão calculada
  
  items           BudgetItem[]
}

model BudgetItem {
  id              String       @id @default(uuid())
  serviceId       String
  service         Service      @relation(fields: [serviceId], references: [id])
  quantity        Int          @default(1)
  pricePerSession Decimal
  totalPrice      Decimal

  budgetId        String
  budget          Budget       @relation(fields: [budgetId], references: [id])
}

model Coupon {
  id            String   @id @default(uuid())
  code          String   @unique
  type          String   // PERCENTAGE, FIXED
  value         Decimal
  active        Boolean  @default(true)
  expiresAt     DateTime?
  usageLimit    Int?     // Limite de usos (null = ilimitado)
  usageCount    Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
